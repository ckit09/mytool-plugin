{
  "manifest_version": 3,
  "name": "Open Tab Next",
  "version": "1.2",
  "description": "Open a new tab right next to the current tab with a shortcut or context menu.",
  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48": "./assets/edit.png",
    "128": "./assets/edit.png"
  },
  "commands": {
    "open-tab-next": {
      "suggested_key": {
        "default": "Ctrl+T",
        "mac": "Command+Shift+N"
      },
      "description": "Open a new tab next to the current tab"
    }
  },
  "action": {
    "default_title": "Open New Tab Next"
  }
}